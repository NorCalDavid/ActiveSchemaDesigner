class <%= @project.name %> < ActiveRecord::Migration
  def change
    <% @project.tables.each do | table | %>

      create_table :<%= table.name %> do |t|
        <% table.fields.each do |field| %>
        t.<%= field.data_type.downcase %> :<%= field.name %>
        <% end %>


        t.timestamps null: false
      end

      add_index :<%= table.name %> , :email, unique: true

   <% end %>
  end
end
