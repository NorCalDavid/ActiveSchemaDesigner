

<div class="center-v white pad-vert">
  <%= form_tag '/login', :class => "pure-form pure-form-aligned center-h" do %>

    <div class="pure-control-group">
      <%= label_tag(:email, "Login") %>
      <%= text_field_tag :email %>
    </div>

    <div class="pure-control-group">
      <%= label_tag(:password, "Password") %>
      <%= password_field_tag :password, "Password" %>
    </div>

    <div class="pure-controls">
      <%= submit_tag "Login", class: "pure-button pure-button-primary" %>
    </div>

  <% end %>
</div>



