<div data-tableid ="t<%= @table.id %>" >

  <div class="title-frame">
    <span class = "table-title"><%= @table.name %> </span>
    <button id="tb<%= @table.id %>" class="edit" title="edit">Edit</button>
  <div>

  <div class="fields-list-frame">
    <% @fields.each do |field| %>
      <div data-fieldid="f<%= field.id %>" class="field-cell <%=field.title%>' '<%=field.type%>"> 
        <%= field.name %>
      </div> 
    <%end%>
  </div>

  <div class="foreignk-frame">
<!--      NOTE  separate treatment of foreign key is not within our original data structure!
