<%= form_for(@table) do |f| %>
  <% if @table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@table.errors.count, "error") %> prohibited this table from being saved:</h2>

      <ul>
      <% @table.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

    <%= button_tag(type: 'button', class: 'btn-add-comments', onclick: 'toggleComments()') do %>
      Add Comment
    <% end %>

  <div class="comments-field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>

  <div>
    <%= f.fields_for :fields, @table.fields do |ff| %>
      <% if ff.object.active? %>
        <%= render '../fields/_new_field_form', f: ff %>
      <%end %>
    <% end %>
    <%= link_to_add_fields "Add Field", f, :fields %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
